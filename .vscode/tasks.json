{
    "version": "2.0.0",
    "tasks": [
        // Create build directory if it doesn't exist
        {
            "label": "create-build-dir",
            "group": "build",
            "type": "shell",
            "command": "mkdir",
            "args": ["-p", "build"],
            "problemMatcher": []
        },
        {
            "label": "build-odin",
            "type": "shell",
            "dependsOn": "create-build-dir",
            "command": "odin",
            "args": ["build", ".", "-out:build/main"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "run-odin",
            "type": "shell",
            "command": "odin",
            "args": ["run", ".", "-out:build/main"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "build-debug",
            "dependsOn": "create-build-dir",
            "type": "shell",
            "command": "odin",
            "args": [
                "build",
                ".",
                "-out:build/debug",
                "-debug"
            ],
            "group": {
                "kind": "build",
            },
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "build-profile",
            "dependsOn": "create-build-dir",
            "type": "shell",
            "command": "odin",
            "args": [
                "build",
                ".",
                "-out:build/profile",
                "-define:PROF_MODE=1",
                "-debug",
            ],
            "group": {
                "kind": "build",
            },
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "debug-current",
            "dependsOn": "create-build-dir",
            "type": "shell",
            "command": "odin",
            "args": [
                "build",
                "${file}",
                "-file",
                "-out:build/${fileBasenameNoExtension}",
                "-debug"
            ],
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ]
}
